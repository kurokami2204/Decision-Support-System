<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fillWidth="true" minHeight="578.0" minWidth="800.0" prefHeight="578.0" prefWidth="692.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hetrogiupluachonmonan.ViewController">
  <HBox spacing="10.0">
    <Label prefHeight="24.0" prefWidth="67.0" text="Danh mục:" />
    <TextField id="txt_input_danhmuc" fx:id="danhMucSearch" onKeyTyped="#handleFilter" prefWidth="200.0" />
  </HBox>
  <HBox spacing="10.0">
    <Label prefHeight="25.0" prefWidth="67.0" text="Giá thành:" />
    <TextField fx:id="giaThanhStart" onKeyTyped="#handleFilter" prefColumnCount="5" prefHeight="25.0" prefWidth="86.0" />
    <Label text="-" />
    <TextField fx:id="giaThanhEnd" onKeyTyped="#handleFilter" prefWidth="89.0" />
  </HBox>
  <HBox spacing="10.0">
    <Label prefHeight="25.0" prefWidth="67.0" text="Nguyên liệu:" />
    <TextField fx:id="nguyenLieuSearch" onKeyTyped="#handleFilter" prefWidth="200.0" />
  </HBox>
   <HBox spacing="10.0">
     <Label prefHeight="25.0" prefWidth="101.0" text="Đánh giá món ăn:" />
     <ComboBox fx:id="DanhGia" onAction="#handleFilter" prefHeight="25.0" prefWidth="78.0">
       <items>
         <FXCollections fx:factory="observableArrayList">
           <String fx:id="danhGia1" fx:value="0-1 sao" />
           <String fx:id="danhGia2" fx:value="1-2 sao" />
           <String fx:id="danhGia3" fx:value="2-3 sao" />
           <String fx:id="danhGia4" fx:value="3-4 sao" />
           <String fx:id="danhGia5" fx:value="4-5 sao" />
           <String fx:id="danhGia6" fx:value="Tất cả" />
         </FXCollections>
       </items>
     </ComboBox>
    </HBox>
  <HBox spacing="10.0">
    <Label prefHeight="25.0" prefWidth="101.0" text="Thời gian chuẩn bị:" />
    <ComboBox fx:id="ThoiGianChuanBi" onAction="#handleFilter" prefHeight="25.0" prefWidth="78.0">
      <items >
        <FXCollections fx:factory="observableArrayList" >
          <String fx:id="1" fx:value="5-10 phút"/>
          <String fx:id="2" fx:value="10-15 phút"/>
          <String fx:id="3" fx:value="trên 15 phút"/>
          <String fx:id="4" fx:value="Tất cả" />
        </FXCollections>
      </items>
    </ComboBox>
  </HBox>
  <TableView fx:id="tbl_monan">
    <columns>
      <TableColumn id="danh_muc_column" fx:id="danh_muc_column" maxWidth="5000.0" minWidth="10.0" prefWidth="90.0" text="Danh mục" />
      <TableColumn id="ten_mon_an_column" fx:id="ten_mon_an_column" maxWidth="5000.0" minWidth="10.0" prefWidth="109.0" text="Tên món ăn" />
      <TableColumn id="nguyen_lieu_column" fx:id="nguyen_lieu_column" maxWidth="5000.0" minWidth="10.0" prefWidth="204.0" text="Nguyên liệu" />
      <TableColumn id="dinh_duong_column" fx:id="dinh_duong_column" maxWidth="5000.0" minWidth="10.0" prefWidth="113.0" text="Giá trị dinh dưỡng" />
      <TableColumn id="time_cbi_column" fx:id="time_cbi_column" maxWidth="5000.0" minWidth="10.0" prefWidth="114.0" text="Thời gian chuẩn bị" />
      <TableColumn id="gia_thanh_column" fx:id="gia_thanh_column" maxWidth="5000.0" minWidth="10.0" prefWidth="78.0" text="Giá thành" />
      <TableColumn id="danh_gia_column" fx:id="danh_gia_column" maxWidth="5000.0" minWidth="10.0" prefWidth="71.0" text="Đánh giá" />
      <!-- add columns here -->
    </columns>
  </TableView>
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
</VBox>
